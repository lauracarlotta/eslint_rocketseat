{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "arrow-spacing":[
            "error",
            "always"
        ],
		"block-spacing":[
            "error",
            "always"
        ],
        "comma-dangle":[
            "error",
            "always"
        ],
        "computed-property-spacing":[
            "error",
            "always"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "keyword-spacing":[
            "error",
            "always"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "object-curly-spacing":[
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-in-parens":[
            "error",
            "always"
        ],
		"space-before-blocks": [
            "error",
            "always"
        ]
    }
}
